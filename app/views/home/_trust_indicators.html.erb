<!-- Trust Indicators -->
<section class="relative w-full pt-24 pb-32">
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-5">
    <div class="absolute rotate-12 -inset-10 bg-gradient-to-r from-brand-500/70 to-brand-900/70 blur-3xl"></div>
  </div>

  <div class="max-w-7xl mx-auto px-4 relative">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl font-bold text-brand-500/80 mb-4">Streamline your workflow</h2>
      <div class="w-24 h-0.5 bg-brand-500/50 mx-auto rounded-full"></div>
    </div>

    <!-- Trust Indicators Grid -->
    <div class="grid md:grid-cols-3 gap-8 w-full">
      <!-- Official Templates -->
      <div class="group h-full relative">
        <div class="absolute -inset-1 bg-gradient-to-r from-brand-500/20 to-brand-700/20 rounded-lg blur opacity-25 group-hover:opacity-50 transition duration-200"></div>
        <div class="absolute top-0 right-0 w-24 h-24 flex items-center justify-center bg-brand-900/70 rounded-lg mb-6">
          <%= inline_svg_tag "outline/sparkles", class: "w-20 h-20 text-brand-300 font-light" %>
        </div>
        <div class="relative h-full px-8 py-10 bg-brand-900/80 rounded-lg border border-brand-500/10 hover:border-brand-500/30 transition-all">
          <h3 class="text-lg font-semibold text-brand-100/90 mb-10">Official templates</h3>
          <p class="text-brand-200/90">Carefully curated collection of professional-grade templates ready for your projects</p>
        </div>
      </div>

      <!-- Community Scripts -->
      <div class="group h-full relative">
        <div class="absolute -inset-1 bg-gradient-to-r from-brand-500/20 to-brand-700/20 rounded-lg blur opacity-25 group-hover:opacity-50 transition duration-200"></div>
        <div class="absolute top-0 right-0 w-24 h-24 flex items-center justify-center bg-brand-900/70 rounded-lg mb-6">
          <%= inline_svg_tag "outline/diamond", class: "w-20 h-20 text-brand-300 font-light" %>
        </div>
        <div class="relative h-full px-8 py-10 bg-brand-900/80 rounded-lg border border-brand-500/10 hover:border-brand-500/30 transition-all">
          <h3 class="text-lg font-semibold text-brand-100/90 mb-10">Community scripts</h3>
          <p class="text-brand-200/90">Join our thriving marketplace to discover and share amazing templates</p>
        </div>
      </div>

      <!-- Private Storage -->
      <div class="group h-full relative">
        <div class="absolute -inset-1 bg-gradient-to-r from-brand-500/20 to-brand-700/20 rounded-lg blur opacity-25 group-hover:opacity-50 transition duration-200"></div>
        <div class="absolute top-0 right-0 w-24 h-24 flex items-center justify-center bg-brand-900/70 rounded-lg mb-6">
          <%= inline_svg_tag "outline/lock-heart", class: "w-20 h-20 text-brand-300 font-light" %>
        </div>
        <div class="relative h-full px-8 py-10 bg-brand-900/80 rounded-lg border border-brand-500/10 hover:border-brand-500/30 transition-all">
          <h3 class="text-lg font-semibold text-brand-100/90 mb-10">Private storage</h3>
          <p class="text-brand-200/90">Keep your custom templates secure with encrypted private storage</p>
        </div>
      </div>

      <!-- Version Control -->
      <div class="group h-full relative">
        <div class="absolute -inset-1 bg-gradient-to-r from-brand-500/20 to-brand-700/20 rounded-lg blur opacity-25 group-hover:opacity-50 transition duration-200"></div>
        <div class="absolute top-0 right-0 w-24 h-24 flex items-center justify-center bg-brand-900/70 rounded-lg mb-6">
          <%= inline_svg_tag "outline/git-merge", class: "w-20 h-20 text-brand-300 font-light" %>
        </div>
        <div class="relative h-full px-8 py-10 bg-brand-900/80 rounded-lg border border-brand-500/10 hover:border-brand-500/30 transition-all">
          <h3 class="text-lg font-semibold text-brand-100/90 mb-10">Version control</h3>
          <p class="text-brand-200/90">Track changes and maintain multiple versions of your templates with ease</p>
        </div>
      </div>

      <!-- Collaboration Tools -->
      <div class="group h-full relative">
        <div class="absolute -inset-1 bg-gradient-to-r from-brand-500/20 to-brand-700/20 rounded-lg blur opacity-25 group-hover:opacity-50 transition duration-200"></div>
        <div class="absolute top-0 right-0 w-24 h-24 flex items-center justify-center bg-brand-900/70 rounded-lg mb-6">
          <%= inline_svg_tag "outline/users", class: "w-20 h-20 text-brand-300 font-light" %>
        </div>
        <div class="relative h-full px-8 py-10 bg-brand-900/80 rounded-lg border border-brand-500/10 hover:border-brand-500/30 transition-all">
          <h3 class="text-lg font-semibold text-brand-100/90 mb-10">Collaboration tools</h3>
          <p class="text-brand-200/90">Work together seamlessly with team members on shared templates</p>
        </div>
      </div>

      <!-- Smart Analytics -->
      <div class="group h-full relative">
        <div class="absolute -inset-1 bg-gradient-to-r from-brand-500/20 to-brand-700/20 rounded-lg blur opacity-25 group-hover:opacity-50 transition duration-200"></div>
        <div class="absolute top-0 right-0 w-24 h-24 flex items-center justify-center bg-brand-900/70 rounded-lg mb-6">
          <%= inline_svg_tag "outline/chart-bar", class: "w-20 h-20 text-brand-300 font-light" %>
        </div>
        <div class="relative h-full px-8 py-10 bg-brand-900/80 rounded-lg border border-brand-500/10 hover:border-brand-500/30 transition-all">
          <h3 class="text-lg font-semibold text-brand-100/90 mb-10">Smart analytics</h3>
          <p class="text-brand-200/90">Gain insights into template usage and performance metrics</p>
        </div>
      </div>

      <!-- API Integration -->
      <div class="group h-full relative">
        <div class="absolute -inset-1 bg-gradient-to-r from-brand-500/20 to-brand-700/20 rounded-lg blur opacity-25 group-hover:opacity-50 transition duration-200"></div>
        <div class="absolute top-0 right-0 w-24 h-24 flex items-center justify-center bg-brand-900/70 rounded-lg mb-6">
          <%= inline_svg_tag "outline/code", class: "w-20 h-20 text-brand-300 font-light" %>
        </div>
        <div class="relative h-full px-8 py-10 bg-brand-900/80 rounded-lg border border-brand-500/10 hover:border-brand-500/30 transition-all">
          <h3 class="text-lg font-semibold text-brand-100/90 mb-10">API integration</h3>
          <p class="text-brand-200/90">Connect and automate your workflow with our robust API endpoints</p>
        </div>
      </div>

      <!-- Custom Workflows -->
      <div class="group h-full relative">
        <div class="absolute -inset-1 bg-gradient-to-r from-brand-500/20 to-brand-700/20 rounded-lg blur opacity-25 group-hover:opacity-50 transition duration-200"></div>
        <div class="absolute top-0 right-0 w-24 h-24 flex items-center justify-center bg-brand-900/70 rounded-lg mb-6">
          <%= inline_svg_tag "outline/arrows-right-left", class: "w-20 h-20 text-brand-300 font-light" %>
        </div>
        <div class="relative h-full px-8 py-10 bg-brand-900/80 rounded-lg border border-brand-500/10 hover:border-brand-500/30 transition-all">
          <h3 class="text-lg font-semibold text-brand-100/90 mb-10">Custom workflows</h3>
          <p class="text-brand-200/90">Build and automate personalized template workflows for your team</p>
        </div>
      </div>

      <!-- Advanced Security -->
      <div class="group h-full relative">
        <div class="absolute -inset-1 bg-gradient-to-r from-brand-500/20 to-brand-700/20 rounded-lg blur opacity-25 group-hover:opacity-50 transition duration-200"></div>
        <div class="absolute top-0 right-0 w-24 h-24 flex items-center justify-center bg-brand-900/70 rounded-lg mb-6">
          <%= inline_svg_tag "outline/shield-check", class: "w-20 h-20 text-brand-300 font-light" %>
        </div>
        <div class="relative h-full px-8 py-10 bg-brand-900/80 rounded-lg border border-brand-500/10 hover:border-brand-500/30 transition-all">
          <h3 class="text-lg font-semibold text-brand-100/90 mb-10">Advanced security</h3>
          <p class="text-brand-200/90">Enterprise-grade security features to protect your sensitive data</p>
        </div>
      </div>
    </div>
  </div>
</section>
